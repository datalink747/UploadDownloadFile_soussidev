<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soussidev.kotlin.uploaddownloadfile_soussidev.ui.RetrofitDownladFile">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download_blank_fragment" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_download"
            android:layout_centerVertical="true"
            android:text="Start Download"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:drawableLeft="@mipmap/download_56"
            android:drawableTintMode="multiply"
            android:drawableTint="@android:color/background_light"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/progress_text"
            android:layout_below="@+id/progress"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </android.support.v7.widget.LinearLayoutCompat>

</FrameLayout>
